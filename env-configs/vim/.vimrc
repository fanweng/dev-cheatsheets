" Set color scheme"
colorscheme desert

" Highlight syntax
syntax on

" Hightlight search terms
set hlsearch

" Find as you type search
set incsearch

" Show matching brackets/parenthesis
set showmatch

" Match time x0.1s
set matchtime=1

" Prompt before quiting
set confirm

" Show line number
set nu

" Content of the status line
set statusline=%F%m%r%h%w\[POS=%l,%v][%p%%]\%{strftime(\"%d/%m/%y\ -\ %H:%M\")}

" Show status always
set laststatus=2

" Set a tab to 4 white spaces
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4
